#-------------#
# Import Vars #
#-------------#
Import('*')

#---------#
# Sources #
#---------#
src = Split("""axis_field.png
               joy_cursor.png
               joy_cal_box.png
               tog_on_up.png
               tog_on_down.png
               tog_off_up.png
               tog_off_down.png
               btn_up.png
               btn_down.png
               text_box.png
               text_cursor.png
               text_highlight.png
               wheel_up_l.png
               wheel_up_r.png
               wheel_down_l.png
               wheel_down_r.png
               sld_cursor.png
               sld_wedge.png""")

#---------------------------------#
# Distribute to src_dir & bin_dir #
#---------------------------------#
dist_files = ['SConscript'] + src

env.Distribute (src_dir, dist_files)
env.Distribute (bin_dir, src)

#--------------------#
# Install data files #
#--------------------#
install = env.Install(Dir(env.subst('$data_directory/skins/x1/textures/widgets')), src)
env.Alias('install', install)

SConscript("controls/SConscript")
